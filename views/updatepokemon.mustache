<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/public/styles.css">
  </head>
  <body>
    <div class="navbar">
      <table>
      <tr class="ul_navbar">
        <td class="nav_li"><a href="/home/">Home</a></td>
        <td class="nav_li"><a href="/home/registeruser">Register</a></td>
        <td class="nav_li"><a href="/home/userlogin">Login</a></td>
        <td class="nav_li"><a href="/home/userlogout">Logout</a></td>
      </tr>
      </table>
      <li class="website_title">Pokebase</li>
      <ul>
        <li class="username_display"><span class="username_span">{{#username}}{{.}}{{/username}}</span></li>
        {{#userId}}
        <li><a href="/home/{{.}}">Account</a></li>
        {{/userId}}
      </ul>
    </div>

    {{#pokemon}}
    <form class="edit_pokemon" action="/home/pokemon/{{id}}/update?_method=PUT" method="POST" enctype="multipart/form-data">
      Edit: {{name}}
      <input type="file" name="pokemonimg">
      <label>Pokemon ID:</label>
      <input type="text" class="edit_input" name="pokeid" value="{{pokeid}}">
      <label>Name:</label>
      <input type="text" class="edit_input" name="name" value="{{name}}">
      <label>Description:</label>
      <textarea name="desc">{{desc}}</textarea>
      <label>Type:</label>
      <input type="text" class="edit_input" name="type" value="{{type}}">
      <label>HP:</label>
      <input type="text" class="edit_input" name="hp" value="{{hp}}">
      <label>Attack:</label>
      <input type="text" class="edit_input" name="attack" value="{{attack}}">
      <label>Defense:</label>
      <input type="text" class="edit_input" name="defense" value="{{defense}}">
      <label>Speed:</label>
      <input type="text" class="edit_input" name="speed" value="{{speed}}">
      <label>Sp Attack:</label>
      <input type="text" class="edit_input" name="spattack" value="{{spattack}}">
      <label>Sp Defense:</label>
      <input type="text" class="edit_input" name="spdefense" value="{{spdefense}}">
      <label>Total:</label>
      <input type="text" class="edit_input" name="total" value="{{total}}">
      <label>Attack 1:</label>
      <input type="text" class="edit_input" name="attackone" value="{{attackone}}">
      <label>Attack 2:</label>
      <input type="text" class="edit_input" name="attacktwo" value="{{attacktwo}}">
      <label>Attack 3:</label>
      <input type="text" class="edit_input" name="attackthree" value="{{attackthree}}">
      <label>Attack 4:</label>
      <input type="text" class="edit_input" name="attackfour" value="{{attackfour}}">
      <label>Weakness:</label>
      <input type="text" class="edit_input" name="weakness" value="{{weakness}}">
      <button>Update</form>
    </form>
    {{/pokemon}}

  </body>
</html>
